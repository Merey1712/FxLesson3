        <TextField id="nameTextField" fx:id="nameTextField" layoutX="36.0" layoutY="89.0" prefHeight="25.0" prefWidth="295.0" promptText="enter name" />
        <TextField id="surnameTextField" fx:id="surnameTextField" layoutX="36.0" layoutY="123.0" prefHeight="25.0" prefWidth="295.0" promptText="enter surname" />
        <TextField id="groupTextField" fx:id="groupTextField" layoutX="36.0" layoutY="157.0" prefHeight="25.0" prefWidth="295.0" promptText="enter group" />
